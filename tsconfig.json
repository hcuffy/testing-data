{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noResolve": false,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "outDir": "./lib",
    "moduleResolution": "node",
    "strict": true
  },
  "include": [  "src/**/*.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
